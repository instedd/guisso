- content_for :form_title do
  %h1 Sign up

= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  / = devise_error_messages! / not needed, errors displayed on each field

  = f.input :name

  = f.input :email, :label => false, :error => false do
    = f.input_field :email, placeholder: 'Email', class: 'block email', pattern: false
    = f.full_error :email

  = f.input :password, :label => false, :error => false do
    = f.input_field :password, placeholder: 'Password', class: 'block password'
    = f.full_error :password

  = f.input :password_confirmation, :label => false, :error => false do
    = f.input_field :password_confirmation, placeholder: 'Password confirmation', class: 'block password'
    = f.full_error :password_confirmation

  = render 'recaptcha/in_form'

  .control-group
    .controls
      = f.submit "Sign up", class: 'btn'

%hr

Already have an account?
= link_to "Log in", new_session_path(resource_name)

